@using MVCCV.Models.Entity
@model List<TBL_COURSES>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Main_Layout.cshtml";
}
@using (Html.BeginForm("Index","Courses",FormMethod.Get))
{
<p>
    <b>  Search word or letter:</b> @Html.TextBox("parameter")
    <input type="submit" value="Search">
</p>
}
<table class="table table-bordered border">
    <thead>
        <tr>
            <th>ID</th>
            <th>COURSE</th>
            <th>DELETE</th>
            <th>UPDATE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <th>@x.ID</th>
                <td>@x.COURSE</td>
                <td>@Html.ActionLink("Delete", "Delete", new { id = x.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you want to delete this item?')" })</td>
                <td><a href="/Courses/GetCourse/@x.ID" class="btn btn-warning">UPDATE</a></td>
            </tr>
            }
    </tbody>
</table>
<a href="/Courses/NewCourse/" class="btn btn-info">Add new course</a>


