@using MVCCV.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBL_SKILLS>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Main_Layout.cshtml";
}

<table class="table table-bordered border">
    <thead>
        <tr>
            <th>ID</th>
            <th>SKILLS</th>
            <th>DELETE</th>
            <th>UPDATE</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <th>@x.ID</th>
                <td>@x.SKILLS</td>

                <td>@Html.ActionLink("Delete", "Delete", new { id = x.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you want to delete this item?')" })</td>
                <td><a href="/Skills/GetSkill/@x.ID" class="btn btn-warning">UPDATE</a></td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new { page}))
<a href="/Skills/NewSkill" class="btn btn-info">Add new skill</a>


